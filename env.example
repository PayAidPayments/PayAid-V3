PAYAID_ADMIN_ENCRYPTION_KEY="" # Admin encryption key (optional)
PAYAID_ADMIN_DECRYPTION_KEY="" # Admin decryption key (optional)

# PayAid Payments - Base URL (same for admin and tenants)
PAYAID_PAYMENTS_PG_API_URL="" # pg_api_url (domain URL of Payment-Gateway APIs)
PAYAID_PAYMENTS_BASE_URL="" # Alternative name for pg_api_url (same as above)

# Backward compatibility (uses admin credentials if PAYAID_ADMIN_* not set)
PAYAID_PAYMENTS_API_KEY="" # api_key (36-digit merchant key) - Falls back to admin if not set
PAYAID_PAYMENTS_SALT="" # salt (used for hash calculation - KEEP SECRET!) - Falls back to admin if not set
PAYAID_PAYMENTS_ENCRYPTION_KEY="" # encryption_key (for encrypted requests - optional)
PAYAID_PAYMENTS_DECRYPTION_KEY="" # decryption_key (for decrypting responses - optional)
