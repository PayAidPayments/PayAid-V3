OLLAMA_API_KEY="" # Leave empty - not needed for local Ollama
OLLAMA_MODEL="llama3.1:8b" # Available models: llama3.1:8b, llama3.1:3b, mistral:7b

# AI - Groq (Fast Inference API - Primary Chat Service)
# REQUIRED for chat features (primary service)
GROQ_API_KEY="" # Get from https://console.groq.com/keys
GROQ_MODEL="llama-3.1-8b-instant" # Options: llama-3.1-8b-instant, llama-3.1-70b-versatile (deprecated), mixtral-8x7b-32768, gemma-7b-it

# AI - Hugging Face Inference API (Cloud-based, Free tier available)
# REQUIRED for image generation and chat fallback
HUGGINGFACE_API_KEY="" # Get from https://huggingface.co/settings/tokens
HUGGINGFACE_MODEL="google/gemma-2-2b-it" # Chat model: google/gemma-2-2b-it, Qwen/Qwen2.5-7B-Instruct-1M
HUGGINGFACE_IMAGE_MODEL="ByteDance/SDXL-Lightning" # Image model: ByteDance/SDXL-Lightning, black-forest-labs/FLUX.1-Krea-dev, ByteDance/Hyper-SD

