{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@payaid/db": [
        "./lib/db/prisma"
      ],
      "@payaid/auth": [
        "./packages/@payaid/auth/src"
      ],
      "@payaid/oauth-client": [
        "./packages/@payaid/oauth-client/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "tests",
    "__tests__",
    "mobile",
    ".next",
    "repositories/**/*",
    "ai-studio-module/**/*",
    "crm-module/**/*",
    "finance-module/**/*",
    "hr-module/**/*",
    "invoicing-module/**/*",
    "marketing-module/**/*",
    "communication-module/**/*",
    "analytics-module/**/*",
    "whatsapp-module/**/*",
    "accounting-module/**/*",
    "core-module/**/*",
    "server/**/*",
    "browser-extension/**/*",
    "docs/**/*",
    "*.config.js",
    "*.config.ts"
  ]
}
